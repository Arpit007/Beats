<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:orientation="vertical"
    tools:context="com.bhatnagar.arpit.beats.MainActivity">

    <EditText
        android:id="@+id/Notes" android:hint="@string/Hint" android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_margin="15dp" android:layout_weight="5"/>

    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:layout_weight="5" android:padding="10dp">

        <Button
            android:id="@+id/Play" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:onClick="Play"
            android:text="@string/Play" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>


        <Button
            android:id="@+id/Pause" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:onClick="Pause"
            android:text="@string/Pause" android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" android:visibility="gone"/>


        <Button
            android:visibility="gone"
            android:id="@+id/Stop" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:onClick="Stop"
            android:text="@string/Stop" android:layout_alignParentTop="true"
            android:layout_alignParentRight="true" android:layout_alignParentEnd="true"/>

        <Button
            android:id="@+id/Sample" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:onClick="Sample"
            android:text="@string/Sample" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_alignParentStart="true"/>
    </RelativeLayout>

</LinearLayout>
